BootStrap: docker
From: ubuntu:latest

%environment
    PATH=/app/pear/scripts:/app/pear/bin:$PATH

%runscript
    exec /app/pear/bin/pear "$@"

%post
    apt-get update
    apt-get install -y locales git build-essential wget # curl libcurl4-openssl-dev libssl-dev python3 python3-pip
    locale-gen en_US.UTF-8

    #
    # Put everything into $APP_DIR
    #
    export APP_DIR=/app
    mkdir -p $APP_DIR
    cd $APP_DIR

    #
    # Stampede code
    #
    cd $APP_DIR
    git clone https://github.com/hurwitzlab/pear.git

    #
    # Mount points for TACC directories
    #
    mkdir /home1
    mkdir /scratch
    mkdir /work
